* text=auto

# PHP
*.php text eol=lf

# JavaScript
*.js text eol=lf
*.json text eol=lf

# CSS
*.css text eol=lf

# Markdown
*.md text eol=lf

# Git
.gitattributes text eol=lf
.gitignore text eol=lf

# Shell scripts
*.sh text eol=lf

# Images
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.svg text

# Archives
*.zip binary
*.tar binary
*.gz binary

# Fonts
*.ttf binary
*.woff binary
*.woff2 binary
*.eot binary

# Exclude from archives
.github export-ignore
tests export-ignore
.gitattributes export-ignore
.gitignore export-ignore
phpunit.xml.dist export-ignore

